{
    "name": "HTMLserve",
    "version": "1.0.0",
    "main": "cli.js",
    "scripts": {
        "start": "node cli.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "./build-app.sh",
        "build-cli": "pkg cli.js --target node18-macos-x64 --output dist/htmlserve"
    },
    "keywords": [
        "html",
        "server",
        "preview",
        "local",
        "development"
    ],
    "author": "COLIN",
    "license": "ISC",
    "description": "Preview local HTML files by double-clicking, with automatic HTTP server.",
    "dependencies": {
        "express": "^5.1.0",
        "open": "^10.2.0"
    },
    "devDependencies": {
        "pkg": "^5.8.1"
    },
    "pkg": {
        "scripts": [
            "cli.js"
        ],
        "assets": [
            "node_modules/express/**/*",
            "node_modules/open/**/*"
        ],
        "targets": [
            "node18-macos-x64"
        ]
    }
}
