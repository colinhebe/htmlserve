{
    "name": "HTMLserve",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist-local": "electron-builder --config .electron-builder.config.json"
    },
    "keywords": [],
    "author": "COLIN",
    "license": "ISC",
    "description": "Preview local HTML files by double-clicking, with automatic HTTP server.",
    "dependencies": {
        "express": "^5.1.0",
        "get-port": "^7.1.0",
        "open": "^10.2.0"
    },
    "devDependencies": {
        "electron": "^37.2.1",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "productName": "HTMLServe",
        "appId": "com.lvjiaxi.htmlserve",
        "icon": "build/icon.icns",
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": "dmg",
            "fileAssociations": [
                {
                    "ext": [
                        "html",
                        "htm"
                    ],
                    "name": "HTML Document",
                    "role": "Viewer"
                }
            ]
        }
    }
}
